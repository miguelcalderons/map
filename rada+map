<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no"/>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
    <script type="text/javascript" src="http://mbostock.github.com/d3/d3.js?1.29.1"></script>
    <style>
 #canvas {
      width: 100%;
      height: 500px;
    }
 
    #canvas > svg {
      width: 100%;
      height: 100%;
    }
 
    .marker {
      fill: red;
    }
 
    .radar {
      fill: rgba(255, 0, 0, 0.65);
      stroke: red;
      stroke-width: 5px;
      stroke-opacity: 1;
    }
        .gmnoprint img {
    max-width: none; 
}
      html, body, #canvas {
        height:400px;
        width:100%;
        margin: 0px;
        padding: 0px;
      }
    </style>
  </head>
  <body>
     <div id="map-canvas"></div>
    <div id="canvas"></div>
<script type="text/javascript">
var mapOptions = new Object();
  mapOptions.styles = [{featureType:'all',stylers:[{saturation:-100},{gamma:0.50}]}];
// LatLng and population for each city.
var citymap = {};
citymap['USA'] = {
  center: new google.maps.LatLng(39.762790, -95.362305),
  population: 1603502
};
citymap['ESPAÃ‘A'] = {
  center: new google.maps.LatLng(39.417035, -3.704834),
  population: 1603502
};
citymap['UNITED KINGDOM'] = {
  center: new google.maps.LatLng(53.351603, -0.804443),
  population: 1603502
};
citymap['BRASIL'] = {
  center: new google.maps.LatLng(-14.642871, -47.606201),
  population: 1603502
};

var cityCircle;

function initialize() {
  // Creating the map.
  var mapOptions = {
    zoom: 3,
    scrollwheel: false,
    panControl:true,
zoomControl:true,
mapTypeControl:true,
scaleControl:true,
streetViewControl:true,
overviewMapControl:true,
rotateControl:true,
    center: new google.maps.LatLng(18.468154, -10.939775),
    mapTypeId: google.maps.MapTypeId.TERRAIN
  };

  var map = new google.maps.Map(document.getElementById('canvas'),
      mapOptions);

  // Constructing the circle for each value in citymap.

  for (var city in citymap) {
    if (citymap[city].population > 1603502) {
      var populationOptions = {
        //The radius is based by the number of each object.
      radius: Math.sqrt(citymap[city].population) * 100,
          strokeColor: '#FF0000',
          strokeOpacity: 1,
          strokeWeight: 1,
          fillColor: 'transparent',
          fillOpacity: 1,
          map: map,
          center: citymap[city].center 
    };
  }else{
    var populationOptions = {
      //The radius is based by the number of each object.
      radius: Math.sqrt(citymap[city].population) * 100,
          strokeColor: '#000000',
          strokeOpacity: 1,
          strokeWeight: 1,
          fillColor: '#FF0000',
          fillOpacity: 1,
          map: map,
          center: citymap[city].center 
    };
  }   
    // Add the circle for the city to the map.
    cityCircle = new google.maps.Circle(populationOptions);
  }

  /* * * * * * * *
   * * * * * * * *
    SVG 
    * * * * * * * * *
   * * * * * * * * */
   
var canvas = d3.select('#map-canvas');

    var baseRadius = '.5%',
    centerX    = '50%',
    centerY    = '50%';


    canvas
    .append('svg')
    .append('circle')
    .attr('r', baseRadius)
    .attr('cx', centerX)
    .attr('cy', centerY)
    .attr('class', 'marker')

    canvas
    .select('svg')
    .append('circle')
      .attr('cx', centerX)
      .attr('cy', centerY)
      .attr('class', 'radar')
      .transition()
        .each('end', bleep);
        

    function bleep() {
    var radar = d3.select(this);

    return radar.attr('r', 0)
    .style('fill-opacity', 1)
    .style('stroke-width', '5px')
    .transition()
    .ease('cubic-in-out')
    .duration(3000)
    .attr('r', '40%')
    .style('fill-opacity', 0)
    .style('stroke-width', 0)
    .each('end', bleep);
  }
}
google.maps.event.addDomListener(window, 'load', initialize);

</script>
  
    
  </body>
</html>
